@model MasterDetails.Models.ViewModels.ClientVM
@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm("Edit", "Clients", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-6">
            <h2>Clients</h2>
            @Html.HiddenFor(x => x.ClientId)
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group row">
                @Html.LabelFor(x => x.ClientName, htmlAttributes: new { @class = "control-label col-3" })
                <div class="col-9">
                    @Html.EditorFor(x => x.ClientName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(x => x.ClientName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(x => x.BirthDate, htmlAttributes: new { @class = "control-label col-3" })
                <div class="col-9">
                    @Html.TextBoxFor(x => x.BirthDate, "{0:yyyy-MM-dd}", new { @class = "form-control", Type = "date" })
                    @Html.ValidationMessageFor(x => x.BirthDate, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(x => x.Age, htmlAttributes: new { @class = "control-label col-3" })
                <div class="col-9">
                    @Html.EditorFor(x => x.Age, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(x => x.Age, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(x => x.PicturePath, htmlAttributes: new { @class = "control-label col-3" })
                <div class="col-9">
                    @Html.TextBoxFor(x => x.PicturePath, new { @class = "form-control mb-1", Type = "file" })
                    <img src="@Model.Picture" width="32" height="32" />
                    @Html.HiddenFor(x => x.Picture)
                    @Html.ValidationMessageFor(x => x.PicturePath, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(x => x.MaritalStatus, htmlAttributes: new { @class = "control-label col-3" })
                <div class="col-9">
                    <div class="checkbox">
                        @Html.EditorFor(x => x.MaritalStatus)
                        @Html.ValidationMessageFor(x => x.MaritalStatus, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="col-6">
            <h2>Select Spot</h2>
            <div class="d-flex justify-content-end mb-3">
                <a href="#" id="btnPlus" class="btn btn-warning mr-2"><i class="fa fa-plus"></i></a>
            </div>
            <div id="SpotContainer">
                @foreach (var item in Model.SpotList)
                {
                    @Html.Action("AddNewSpot", "Clients", new { id = item })
                }
            </div>
        </div>
        <div class="d-flex justify-content-start offset-2">
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>
    </div>
    <div>
        <a href="@Url.Action("Index","Clients")" class="btn btn-link"><i class="fa fa-arrow-left"></i> Back to list</a>
    </div>
}




